Special numbers
void special(int x);
int main(){
    int x;
    
    printf("Enter the number:");
    scanf("%d",&x);
    
    special(x);
}

void special(int x){
    int a;
    int b;
    int c;
    int y;
    y = x;
    
    a = x%10;
    x = x/10;
    
    b = x%10;
    x = x/10;
    
    c = x + b;
    
    if(c == a){
        printf("%d is a special number",y);
    }
    else{
        printf("%d is not a special number",y);
    }
}
